{
  "extends": [
    "config:base",
    ":gitSignOff"
  ],
  "enabled": true,
  "timezone": "Europe/Paris",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  // "gitAuthor": "Nicolas Lamirault <nlamirault@users.noreply.github.com>",
  // "commitBody": "Signed-off-by: Nicolas Lamirault <nlamirault@users.noreply.github.com>",
  // Do not notify on closed unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  // Do not rebase PRs
  "rebaseWhen": "conflicted",
  "assignees": ["@nlamirault"],
  "reviewersFromCodeOwners": true,
  "labels": ["kind/renovate", "lifecycle/active", "status/review_needed"],
  "helm-values": {
    "fileMatch": ["kubernetes/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["kubernetes/.+\\.yaml$"],
      "matchStrings": [
        // helmrelease
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n",
        // kube-prometheus-stack
        "registryUrl=(?<registryUrl>.*?)\n *tag: (?<depName>[a-zA-Z-]+)-(?<currentValue>.*)\n",
        // cert-manager
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\n.*\\/(?<currentValue>.*?)\\/"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": [
        "iac/alicloud/kubernetes/.+\\.tfvars$",
        "iac/aws/kubernetes/.+\\.tfvars$",
        "iac/azure/kubernetes/.+\\.tfvars$",
        "iac/digitalocean/kubernetes/.+\\.tfvars$",
        "iac/gcp/kubernetes/.+\\.tfvars$"
      ],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart_name: (?<depName>.*?)\n *chart_version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    },
  ],
  "packageRules": [
    // Setup datasources
    {
      "datasources": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}",
      "separateMinorPatch": true
    },
    // Labels for Terraform
    {
      "datasources": ["terraform", "terraform-version", "terraform-provider", "terraform-module"],
      "updateTypes": ["major"],
      "labels": ["dependency/terraform", "priority/high", "size/xs"]
    },
    {
      "datasources": ["terraform", "terraform-version", "terraform-provider", "terraform-module"],
      "updateTypes": ["minor"],
      "labels": ["dependency/terraform", "priority/medium", "size/xs"]
    },
    {
      "datasources": ["terraform", "terraform-version", "terraform-provider", "terraform-module"],
      "updateTypes": ["patch"],
      "labels": ["dependency/terraform", "priority/low", "size/xs"]
    },
    // Labels for Docker
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["dependency/docker", "priority/high", "size/xs"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["dependency/docker", "priority/medium", "size/xs"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["dependency/docker", "priority/low", "size/xs"]
    },
    // Labels for Helm
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["dependency/helm", "priority/high", "size/xs"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["dependency/helm", "priority/medium", "size/xs"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["dependency/helm", "priority/low", "size/xs"]
    },
    // Labels for Ansible
    {
      "datasources": ["galaxy", "galaxy-collection"],
      "updateTypes": ["major"],
      "labels": ["dependency/ansible", "priority/high", "size/xs"]
    },
    {
      "datasources": ["galaxy", "galaxy-collection"],
      "updateTypes": ["minor"],
      "labels": ["dependency/ansible", "priority/medium", "size/xs"]
    },
    {
      "datasources": ["galaxy", "galaxy-collection"],
      "updateTypes": ["patch"],
      "labels": ["dependency/ansible", "priority/low", "size/xs"]
    },
    // Labels for Github Actions
    {
      "datasources": ["action"],
      "updateTypes": ["major"],
      "labels": ["dependency/github", "priority/high", "size/xs"]
    },
    {
      "datasources": ["action"],
      "updateTypes": ["minor"],
      "labels": ["dependency/github", "priority/medium", "size/xs"]
    },
    {
      "datasources": ["actionn"],
      "updateTypes": ["patch"],
      "labels": ["dependency/github", "priority/low", "size/xs"]
    },
    // Enable auto-merge docker
    // {
    //   "datasources": ["docker"],
    //   "automerge": true,
    //   "requiredStatusChecks": null,
    //   "updateTypes": ["minor", "patch"],
    // },
    // Enable auto-merge helm
    // {
    //   "datasources": ["helm"],
    //   "automerge": true,
    //   "requiredStatusChecks": null,
    //   "updateTypes": ["patch"],
    // }
  ]
}
